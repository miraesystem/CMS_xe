<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">기업용 레이아웃</title>
    <description xml:lang="ko">
        기업이미지홍보용 레이아웃입니다.
        제작 : 미래시스템
    </description>

    <version>0.1</version>
    <date>2016-05-01</date>
    <link>http://www.web25.co.kr/</link>

    <author email_address="web25@web25.co.kr" link="http://kty4523.blog.me/">
        <name xml:lang="ko">미래시스템</name>

    </author>

    <extra_vars>
	<var name="layout_type" type="select">
            <title xml:lang="ko">레이아웃 형태</title>
            <description xml:alng="ko">본문 또는 본문+서브메뉴 영역의 형태를 선택해주세요.</description>
            
			<options value="cef">
                <title xml:lang="ko">본문 + 서브영역풀페이지</title>
            </options>
			
			<options value="ce">
                <title xml:lang="ko">본문 + 서브메뉴 영역 (기본)</title>
            </options>
            <options value="c">
                <title xml:lang="ko">본문</title>
            </options>
        </var>
       
        <var name="index_url" type="text">
            <title xml:lang="ko">홈 페이지 URL</title>
            <title xml:lang="en">Homepage URL</title>
            <description xml:lang="ko">로고를 클릭시에 이동할 홈 페이지 URL을 입력해 주세요.</description>
            <description xml:lang="en">Please input the URL to redirect when user clicks the logo.</description>
        </var>

    </extra_vars>

    <menus>
        <menu name="main_menu" maxdepth="3" default="true">
            <title xml:lang="ko">상단 메뉴</title>
            <title xml:lang="en">Top menu</title>
        </menu>
    </menus>
</layout>
